pipeline{
  agent{
    kubernetes {
        yamlFile 'pod.yaml'
        retries 2
        }
      }
    parameters{
        booleanParam(defaultname:true,name:'myBoolean', description:'boolean example' )

    }

    
  stages{
    stage ('demo'){
       steps{ 
       echo 'the value of param is: ${params.myBoolean}'
       }
     }
    }
}
